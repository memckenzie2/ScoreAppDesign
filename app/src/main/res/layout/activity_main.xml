<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src ="@drawable/bruno_liljefors_1909"
        android:scaleType="centerCrop"
        />


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:text="Fox in the Forest Score Keeper"
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        android:padding="4dp"
        android:background="#70FFD700"
        />



    <LinearLayout
        android:id="@+id/player_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/title"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:layout_margin= "16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player A"
            android:textSize = "20sp"
            android:layout_marginBottom="8dp"
            android:padding="4dp"
            android:background="#70FFD700"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize = "32sp"
            android:layout_marginBottom="8dp"
            android:padding="4dp"
            android:background="#70FFD700"
            />

        <TextView
            android:id="@+id/roundA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/player_b"
            android:layout_centerInParent="true"
            android:text="Current Round\nTrick Counter"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:padding="4dp"
            android:background="#70FFD700"
            />

        <LinearLayout
            android:id="@+id/round_trackerA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            >
            <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="+"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                />
            <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="-"
                />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/player_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/title"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:layout_margin= "16dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player B"
        android:textSize = "20sp"
        android:layout_marginBottom="8dp"
        android:padding="4dp"
        android:background="#70FFD700"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize = "32sp"
            android:layout_marginBottom="8dp"
            android:padding="4dp"
            android:background="#70FFD700"
            />

        <TextView
            android:id="@+id/roundA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/player_b"
            android:layout_centerInParent="true"
            android:text="Current Round\nTrick Counter"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:padding="4dp"
            android:background="#70FFD700"
            />

        <LinearLayout
            android:id="@+id/round_trackerB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            >
            <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="+"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                />
            <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="-"
                />

        </LinearLayout>


    </LinearLayout>


    <TextView
        android:id="@+id/scoring_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scoring Guide"
        android:textSize = "20sp"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/player_a"
        android:padding="4dp"
        android:background="#70FFD700"
        />

    <LinearLayout
        android:id="@+id/scoring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/scoring_title"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#70FFD700"
            android:gravity="center"
            android:text="Humble\n\nDefeated\n\nVictorious\nGreedy"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0-3 Tricks\n4 Tricks\n5 Tricks\n6 Tricks\n7-9 Tricks\n10-13 Tricks"
            android:textSize="16sp"
            android:gravity="center"
            android:background="#70FFD700"
            android:layout_marginTop="4dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6 Points\n1 Point\n2 Points\n3 Points\n6 Points\n0 Points"
            android:textSize="16sp"
            android:gravity="center"
            android:background="#70FFD700"
            android:layout_marginTop="4dp"
            />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New\nRound"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New\nGame"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        />

    <Button
        android:id="@+id/rules"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Rules"
        android:layout_below="@id/player_a"
        android:layout_toRightOf="@id/scoring_title"
        android:layout_centerInParent="true"
        />


</RelativeLayout>